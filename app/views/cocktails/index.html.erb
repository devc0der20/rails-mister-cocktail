<%= render "navbar" %>



<div class="container m-2">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col mb-4">

        <div class="card" style="width: 18rem;">
          <img src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" class="card-img-top" alt="...">
          <div class="card-body">
            <p class="card-text text-center">
            <i class="fas fa-plus-circle"></i>
            <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-link" %>
            <!-- Scrollable modal -->
            <%= render "modal", cocktail: cocktail %>

            </p>

          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>
